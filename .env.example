# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
CRON_NOTIFY_USER_ID=your_telegram_user_id_here

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
# Optional: comma-separated channel IDs to allow, leave empty to allow all
DISCORD_ALLOWED_CHANNEL_IDS=

# WhatsApp (Twilio) Configuration
WHATSAPP_TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
WHATSAPP_TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
WHATSAPP_TWILIO_NUMBER=whatsapp:+14155238886
# Optional extra validation token (send as query param ?token=...)
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# AI Backend Configuration
AI_BACKEND=ollama
OLLAMA_URL=http://127.0.0.1:11434/api/generate
OLLAMA_MODEL=llama3.2
CHAT_HISTORY_LIMIT=5

# Skill metadata sync (updates skills/*/metadata.json from service class methods on startup)
AUTO_SYNC_SKILL_METADATA=true
SKILL_METADATA_SYNC_ONLY_MISSING=false

# Universal semantic NLU fallback
NLU_ENABLED=true
NLU_MODEL=sentence-transformers/all-MiniLM-L6-v2
NLU_MIN_CONFIDENCE=0.22

# RAG / knowledge retrieval settings
RAG_ENABLED=true
RAG_KB_DIR=knowledge
RAG_CHUNK_SIZE=700
RAG_TOP_K=3
RAG_MAX_CONTEXT_CHARS=2000

# OpenAI Configuration (if using OpenAI backend)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Gmail Configuration
GMAIL_EMAIL=your_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password_here

# Weather Configuration (Get free key from https://openweathermap.org/api)
OPENWEATHER_API_KEY=your_openweather_api_key_here
DEFAULT_CITY=London
DEFAULT_COUNTRY_CODE=GB

# News Configuration (Get free key from https://newsapi.org/)
NEWSAPI_KEY=your_newsapi_key_here

# Trello Configuration (Get from https://trello.com/app-key)
TRELLO_API_KEY=your_trello_api_key_here
TRELLO_TOKEN=your_trello_token_here

# Web Search (DuckDuckGo - no key required)
# Note: DuckDuckGo search doesn't require an API key
